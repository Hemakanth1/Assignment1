Q1
object MainObject {
    
       def convertTofahrenheit(c: Double ) {
       var f=c*1.8000 + 32.00
       println(f)
    }
   
      def main(args: Array[String]) {  
        convertTofahrenheit(35)           
 
    }  
   
}

